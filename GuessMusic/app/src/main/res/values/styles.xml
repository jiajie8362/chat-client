<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/white_color</item>
        <item name="actionMenuTextColor">@color/white_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/ActionBarMenuTextStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <!--<item name="android:background">@drawable/action_bar_bg</item>-->
        <!--<item name="background">@drawable/action_bar_bg</item>-->
        <!--<item name="android:height">@dimen/action_bar_height</item>-->
        <!--<item name="height">@dimen/action_bar_height</item>-->
        <!--<item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>-->
        <!--<item name="titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>-->
        <!--<item name="elevation">@dimen/action_bar_elevation</item>-->
    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_color</item>
        <!--<item name="android:textSize">@dimen/action_bar_title_text_size</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarTabStyle" parent="style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ActionBarTabBarStyle" parent="Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="divider">@null</item>
        <item name="showDividers">middle</item>
        <item name="dividerPadding">0dip</item>
    </style>

    <style name="ActionBarMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LikeStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SettingsInterestedInDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="VemeFullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DeleteVideoDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditDescriptionDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
